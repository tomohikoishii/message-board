<div class="panel panel-default">
  <div class="panel-heading">
      メッセージ一覧
  </div>
  
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br />
    <% end %>
  </div>
</div>

<div class="form-horizontal">
  <%= form_for(Message.new) do |f| %>
  <div class="form-group">
    <label class="col-sm-1 control-label">名前:</label>
    <div class="col-sm-5">
      <%= f.text_area :name, :size => "20x1", :maxlength => "20", :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-1 control-label">内容:</label>
    <div class="col-sm-5">
      <%= f.text_area :body, :size => "50x5", :maxlength => "250", :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-1">
      <div class="col-sm-5">
        <%= f.submit :class => "btn btn-default" %>
      </div>
    </div>
  </div>
  <% end %>
</dv>
