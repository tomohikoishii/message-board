
<div class="form-horizontal">
  <%= form_for(@message) do |f| %>
    <% if @message.errors.present? %>
      <div class="alert alert-danger">
        <%= alert %>
        <ul>
          <% @message.errors.full_messages.each do |full_message| %>
            <li>
              <%= full_message %>
            </li>
          <% end %> 
        </ul>
      </div>
    <% end %>
  
    <div class="form-group">
      <label class="col-sm-1 control-label">名前:</label>
      <div class="col-sm-5">
        <%= f.text_area :name, :size => "20x1", :maxlength => "20", :class => "form-control" %>
      </div>
    </div>
  
    <div class="form-group">
      <label class="col-sm-1 control-label">年齢:</label>
      <div class="col-sm-1">
        <%= f.number_field :age, :class => "form-control" %>
      </div>
    </div>
  
    <div class="form-group">
      <label class="col-sm-1 control-label">内容:</label>
      <div class="col-sm-5">
        <%= f.text_area :body, :size => "50x5", :maxlength => "250", :class => "form-control" %>
      </div>
    </div>
  
    <div class="form-group">
      <div class="col-sm-offset-1">
        <div class="col-sm-5">
          <%= f.submit :class => "btn btn-default" %>
        </div>
      </div>
    </div>
  <% end %>
</div>